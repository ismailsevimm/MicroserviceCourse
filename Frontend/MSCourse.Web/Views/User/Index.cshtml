
@{
    ViewData["Title"] = "Index";
}
@model MSCourse.Web.Models.UserViewModel

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <h5 class="card-header">User Infos</h5>
                <table class="table table-striped">
                    <tr>
                        <td class="text-dark">User Name</td>
                        <td class="text-dark">@Model.UserName</td>
                    </tr>
                     <tr>
                        <td class="text-dark">Email Address</td>
                        <td class="text-dark">@Model.Email</td>
                    </tr>
                     <tr>
                        <td class="text-dark">City</td>
                        <td class="text-dark">@Model.City</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>


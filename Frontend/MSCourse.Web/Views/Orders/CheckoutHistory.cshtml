@{
    ViewData["Title"] = "CheckoutHistory";
}

@model List<OrderViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Order(Payment) History</h5>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Order(Payment) No</th>
                            <th>Order(Payment) Date</th>
                            <th>Details</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CreatedTime.ToShortDateString()</td>
                                <td>
                                    <table class="table table-striped">
                                        <tr>
                                            <th class="col-9">Course Name</th>
                                            <th class="col-3">Course Price</th>
                                        </tr>
                                        @foreach (var orderItem in item.OrderItems)
                                        {
                                            <tr>
                                                <td class="col-9">
                                                    <a class="btn btn-link" asp-controller="Home" asp-action="Detail" asp-route-id="@orderItem.ProductId">
                                                        @orderItem.ProductName
                                                    </a>
                                                </td>
                                                <td class="col-3">@orderItem.Price ₺</td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <div class="alert alert-info">There are no courses you have purchased.</div>
                }
            </div>
        </div>
    </div>
</div>
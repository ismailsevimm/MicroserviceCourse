
@{
    ViewData["Title"] = "Detail";
}
@model CourseViewModel

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="row">
                <div class="col-md-8 offset-2">
                    <img src="@Model.PictureUrl" class="card-img-top"/>
                </div>
            </div>
            
            <div class="card-body">
                <h5 class="card-header">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-header mb-2">Fiyat: @Model.Price ₺</h4>
                <a href="" class="btn btn-primary btn-block">Add to Cart</a>
            </div>
        </div>
    </div>
</div>
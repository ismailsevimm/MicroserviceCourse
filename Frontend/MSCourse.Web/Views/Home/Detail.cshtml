@{
    ViewData["Title"] = "Detail";
}
@model CourseViewModel

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="row">
                <div class="col-md-8 offset-2">
                    <img src="@Model.PictureUrl" class="card-img-top" />
                </div>
            </div>

            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <div class="badge bg-primary">Category: @Model.Category.Name</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-2">Fiyat: @Model.Price ₺</h4>
                <div class="d-grid">
                    <a asp-controller="Baskets" asp-action="AddBasketItem" asp-route-courseId="@Model.Id" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>